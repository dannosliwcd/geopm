#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@ --with autoreconf 

override_dh_missing:
	dh_missing --list-missing -X.la

override_dh_auto_configure:
	dh_auto_configure -- --with-bash-completion-dir=/etc/bash_completion.d \
	                     --disable-mpi \
	                     --disable-openmp \
	                     --disable-fortran \
	                     --disable-geopmd-local
